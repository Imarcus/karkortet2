<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.karkortet.marcusisaksson.karkortet2.fragments.LoginFragment">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="3819273365782141"
        android:ems="10"
        android:id="@+id/cardNumberLoginText"
        android:layout_alignParentTop="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/cardNumberButton"
        android:layout_toRightOf="@+id/cardNumberLoginText"
        android:onClick="onCardNumberButtonClicked"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/restaurants_fragment_container"
        android:layout_alignParentBottom="true"/>


</RelativeLayout>
